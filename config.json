{
  "lib": {
    "parent_dir": "/Desktop/task_management"
  },

  "daily_log": {
    "file_structure": {
      "daily_log_path": "/demo_files/logs"
    }
  },
  "tasks": {
    "file_structure": {
      "tasks_path": "/demo_files/tasks",
      "ordered_subdirs": ["work", "personal"]
    },
    "task_config": {
      "status_enum": ["backlog", "planned", "in_progress", "closed"],
      "urgency_enum": ["low", "medium", "high"],
      "priority_enum": ["low", "medium", "high"],
      "tags_enum": [
        "chore",
        "bug",
        "feature",
        "research",
        "admin",
        "meeting",
        "other"
      ]
    }
  }
}
